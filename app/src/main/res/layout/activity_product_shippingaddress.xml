<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scrollbar"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_weight="1"
    android:layout_margin="10dp"
    android:scrollbars="vertical">

<LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginBottom="10dp">

    <TextView
        android:id="@+id/txv_shippingaddress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Shipping Address"
        android:textColor="@color/colorPrimary"
        android:padding="7dp"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/txv_productname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Shipping Address"
        android:textColor="#f29108"
        android:padding="7dp"
        android:visibility="gone"/>

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="10dp"
        android:background="@color/grey_light"
        android:visibility="gone"/>


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:baselineAligned="false"
        >
        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_weight="1"
            android:layout_marginRight="4dp"
            android:id="@+id/firstinputlayout"
            android:textColorHint="@color/colorHint"
           >

            <EditText android:id="@+id/edtx_firstname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/FirstName"
                android:textSize="13sp"
                android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"
                />
        </android.support.design.widget.TextInputLayout>


        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_weight="1"
            android:layout_marginLeft="4dp"
            android:id="@+id/lastinputlayout"
            android:textColorHint="@color/colorHint"
            >
            <EditText android:id="@+id/edtx_lastname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/lastname"
                android:textSize="13sp"
                android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"
                />
        </android.support.design.widget.TextInputLayout>

    </LinearLayout>


    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:id="@+id/emailinputlayout"
        android:textColorHint="@color/colorHint"
        android:textSize="12sp"
        >

        <EditText android:id="@+id/edtx_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:hint="@string/Email"
            android:textSize="13sp"/>
    </android.support.design.widget.TextInputLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:baselineAligned="false"
        >

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_weight="1"
        android:layout_marginBottom="5dp"
        android:id="@+id/mobileinputlayout"
        android:textColorHint="@color/colorHint">

        <EditText android:id="@+id/edtx_mobile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:maxLength="10"
            android:textSize="13sp"
            android:hint="@string/Mobile"/>
    </android.support.design.widget.TextInputLayout>

        <LinearLayout
            android:id="@+id/pincode"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="visible"
            android:layout_marginLeft="5dp">

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:id="@+id/pincodeinputlayout"
                android:textColorHint="@color/colorHint">

                <EditText android:id="@+id/edtx_pincode"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:maxLength="6"
                    android:hint="Pincode"
                    android:textSize="13sp"
                   />
            </android.support.design.widget.TextInputLayout>
        </LinearLayout>


        </LinearLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:id="@+id/address1inputlayout"
        android:textColorHint="@color/colorHint">

        <EditText android:id="@+id/edtx_addressline1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:hint="@string/addressline1"
            android:textSize="13sp"
            />
    </android.support.design.widget.TextInputLayout>


    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:id="@+id/address2inputlayout"
        android:textColorHint="@color/colorHint">

        <EditText android:id="@+id/edtx_addressline2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:hint="@string/addressline2"
            android:textSize="13sp"
            />
    </android.support.design.widget.TextInputLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/Spinner"
        android:layout_marginLeft="2dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select Country"
            android:textSize="13sp"
            android:textColor="@color/colorHint"
            android:layout_marginTop="5dp"
            />
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <Spinner
                    android:id="@+id/spin_country"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    />

            </FrameLayout>
        <TextView
            android:id="@+id/txv_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select State"
            android:textSize="13sp"
            android:textColor="@color/colorHint"
            android:layout_marginTop="5dp"/>
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <Spinner
                    android:id="@+id/spin_State"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    />

            </FrameLayout>

        <TextView
            android:id="@+id/txv_city"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select City"
            android:textSize="13sp"
            android:textColor="@color/colorHint"
            android:layout_marginTop="5dp"/>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <Spinner
                    android:id="@+id/spin_City_District_Town"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    />
            </FrameLayout>

    </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginTop="5dp"
            >
            <Button
                android:id="@+id/btn_submit"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="@string/Submit"
                android:textColor="@color/white"
                android:visibility="visible"
                android:background="@color/colorPrimary"/>
        </LinearLayout>
</LinearLayout>
</ScrollView>