<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingLeft="16dp"
    android:paddingRight="16dp">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:padding="30dp"
        android:text="Forgot your password?"
        android:textSize="20dp"
        android:textColor="@color/colorPrimary"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:gravity="center_horizontal"
        android:padding="10dp"
        android:text="To reset password, enter your email, press the \'GO\' button and check mail to follow instruction."
        android:textSize="14dp"
        android:textColor="@color/stay_color"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <EditText
            android:id="@+id/edtx_email"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="Your email here"
            android:inputType="textEmailAddress"
            android:layout_weight="1"
            android:background="@drawable/button_bg_transparent"
            android:padding="10dp"
            android:textSize="13dp"
            android:layout_marginRight="10dp"
           />
        <Button
            android:id="@+id/btn_go"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="Go"
            android:textColor="@color/white"
            android:background="@drawable/round_button"

            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:orientation="vertical">
        <android.support.design.widget.TextInputLayout
            android:id="@+id/otpinputlayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="10dp"
            android:textColorHint="@color/colorPrimary">
        <EditText
            android:id="@+id/edtx_otp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter OTP"
            android:textSize="13dp"
            android:inputType="textEmailAddress"
          />
       </android.support.design.widget.TextInputLayout>
    </LinearLayout>

    <Button
        android:id="@+id/btn_submit"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/round_button"
        android:text="Submit"
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/link_signup"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:layout_marginBottom="24dp"
        android:gravity="center"
        android:text="No account yet? Create New"
        android:textColor="@color/colorPrimary"
        android:textSize="15dip"
        android:layout_marginTop="15dp"/>
</LinearLayout>