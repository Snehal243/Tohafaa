<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="center_vertical"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_weight="1">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Enter OTP For confirm Your Account"
            android:textColor="@color/colorPrimary"
            android:padding="7dp"/>

        <View android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="10dp"
            android:background="@color/grey_light"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Please check your Mobile - Enter One Time Password!"
            android:textColor="@color/colorHint"
            android:padding="7dp"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@android:color/transparent"
            android:focusable="true"
            android:focusableInTouchMode="true"></LinearLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/otpinputlayout"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:textColorHint="@color/stay_color"
            android:textSize="14sp"
            android:padding="7dp"
           >

            <EditText
                android:id="@+id/edtx_otp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="OTP"
                android:inputType="number"
                android:maxLength="6"
                android:textSize="14sp" />

        </android.support.design.widget.TextInputLayout>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/layoutbuttons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:padding="30dp">

        <Button
            android:id="@+id/btn_submit"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/colorPrimary"
            android:text="@string/Submit"
            android:textColor="#ffffff" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginBottom="15dp"
        >

       <TextView
           android:id="@+id/txv_resendotp"
           android:layout_width="0dp"
           android:layout_height="wrap_content"
           android:textColor="@color/colorHint"
           android:text="@string/ResendOTP"
           android:textStyle="bold"
           android:layout_gravity="center"
           android:gravity="center"
           android:layout_weight="1"
           android:textSize="17sp"/>

        <TextView
            android:id="@+id/txv_gotohome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorHint"
            android:text="@string/ResendOTP"
            android:layout_gravity="right"
            android:visibility="gone"/>

    </LinearLayout>

</LinearLayout>